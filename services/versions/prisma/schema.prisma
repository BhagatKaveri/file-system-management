// services/version/prisma/schema.prisma

datasource versionDb {
  provider = "postgresql"
  url      = env("DATABASE_URL_VERSION")
}

generator client {
  provider = "prisma-client-js"
}

model Document {
  id        String     @id @default(uuid())
  title     String
  content   String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  userId    String
  versions  Version[]  @relation("DocumentVersions")
}

model Version {
  id         String    @id @default(uuid())
  version    String
  fileUrl    String
  uploadedAt DateTime  @default(now())
  documentId String
  document   Document  @relation("DocumentVersions", fields: [documentId], references: [id])
}
